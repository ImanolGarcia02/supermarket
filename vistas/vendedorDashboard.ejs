<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Panel Vendedor</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">

  <div class="text-center mb-4">
    <h2>Panel Vendedor</h2>
    <p class="text-muted">Selecciona una opción para continuar</p>
  </div>

  <!-- Opciones principales -->
  <div class="row text-center">
    <div class="col-md-4 mb-3">
      <div class="bg-light p-3 rounded shadow-sm">
        <h5>Ventas</h5>
        <p>Consulta y gestiona tus ventas</p>
        <a href="/vendedor/ventas" class="btn btn-primary">Ver Ventas</a>
      </div>
    </div>

  <div class="col-md-4 mb-3">
    <div class="bg-light p-3 rounded shadow-sm">
      <h5>Agregar Venta</h5>
      <p>Registra una nueva venta</p>
      <a href="/ventas/nuevo" class="btn btn-success">Agregar Venta</a>
    </div>
  </div>


    <div class="col-md-4 mb-3">
      <div class="bg-light p-3 rounded shadow-sm">
        <h5>Ingresos</h5>
        <p>Total acumulado de ingresos</p>
        <h3>$<%= totalIngresos.toFixed(2) %></h3>
      </div>
    </div>
  </div>

  <!-- Resumen rápido -->
  <div class="row text-center mt-4">
    <div class="col-md-6 mb-3">
      <div class="bg-light p-3 rounded shadow-sm">
        <h5>Total Ventas</h5>
        <h3><%= totalVentas %></h3>
      </div>
    </div>
    <div class="col-md-6 mb-3">
      <div class="bg-light p-3 rounded shadow-sm">
        <h5>Ingresos Totales</h5>
        <h3>$<%= totalIngresos.toFixed(2) %></h3>
      </div>
    </div>
  </div>

  <!-- Tabla de ventas (solo si existe la variable ventas) -->
  <% if (typeof ventas !== "undefined") { %>
    <% if (ventas.length === 0) { %>
      <p class="alert alert-info text-center mt-4">No hay ventas registradas.</p>
    <% } else { %>
      <div class="table-responsive mt-4">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-primary text-center">
            <tr>
              <th>Producto</th>
              <th>Cliente</th>
              <th>Cantidad</th>
              <th>Fecha</th>
              <th>Total</th>
              <th>Estado</th>
              <th>Opciones</th>
            </tr>
          </thead>
          <tbody>
            <% ventas.forEach(venta => { %>
              <tr>
                <td><%= venta.productoId ? venta.productoId.nombre : "No disponible" %></td>
                <td><%= venta.cliente %></td>
                <td><%= venta.cantidad %></td>
                <td><%= new Date(venta.fechaVenta).toLocaleDateString() %></td>
                <td>$<%= venta.total.toFixed(2) %></td>
                <td><%= venta.cancelada ? "Cancelada" : "Activa" %></td>
                <td class="text-center">
                  <% if (!venta.cancelada) { %>
                    <form action="/vendedor/ventas/<%= venta._id %>/cancelar" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-sm btn-warning">Cancelar</button>
                    </form>
                  <% } else { %>
                    <span class="text-muted">Sin acción</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  <% } %>

  <!-- Botón cerrar sesión -->
  <div class="text-center mt-4">
    <a href="/usuarios/logout" class="btn btn-danger">Cerrar sesión</a>
  </div>

</body>
</html>
